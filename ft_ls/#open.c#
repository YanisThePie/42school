#include "ft_ls.h"

int main (int argc, char **argv)
{
	(void)argc;
	DIR *dir;
	struct dirent *pdirent;
	struct dirent dup;

	ft_bzero(&dup, sizeof(struct dirent));
	if (argv[1] == NULL)
		dir = opendir(".");
	else
		dir = opendir(argv[1]);
	if (dir == NULL)
	{
		perror("");
		return(0);
	}
	while((pdirent = readdir(dir)) != NULL)
	{
		ft_memcpy(&dup, pdirent, sizeof(struct dirent))
		usestat(dup->d_name);
	}
	closedir (dir);
}


